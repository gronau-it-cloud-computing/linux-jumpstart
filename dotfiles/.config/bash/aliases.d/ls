# Turn automagic coloring on is LS_COLORS is set
# Always show file-type character after filename
if [ -n "${LS_COLORS}" ] ; then
	alias ls='ls -F --color=auto'
else
	alias ls='ls -F'
fi

# Show all files in long format with type characters and human-readable units
alias ll='ls -alFh'
# List non-dotfiles long-ly
alias lll='ls -lFh'

# List all files excepting ., ..
alias la='ls -A'
