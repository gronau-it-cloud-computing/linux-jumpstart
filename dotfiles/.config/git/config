[core]
	editor = vim
	excludesfile = ~/.config/git/exclude
[push]
	default = matching
[alias]
    graph = log --color --graph --pretty=format:'%Cred%<(8)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate
[init]
	templatedir = ~/.config/git/templates
